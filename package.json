{
  "name": "debond-exchange",
  "version": "1.0.0",
  "description": "module for allowing bond holders to auction their bonds via  P2P FCFS english auction method",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "generate-types": "npx typechain --target=truffle-v5 'build/contracts/*.json'",
    "lint": "yarn solhint && yarn prettier:check",
    "lint:check": "yarn prettier:check && yarn solhint:check",
    "postinstall": "husky install",
    "prettier": "prettier --config \"./.prettierrc.yml\" --write \"**/*.{json,md,sol,yml}\"",
    "prettier:check": "prettier --config \"./.prettierrc.yml\" --check \"**/*.{json,md,sol,yml}\"",
    "solhint": "solhint --config \"./.solhint.json\" \"{src,test}/**/*.sol\""

  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@debond-protocol/debond-governance-contracts": "0.0.3",
    "@debond-protocol/debond-token-contracts": "0.0.4",
    "@openzeppelin/contracts": "^4.5.0",
    "erc3475": "0.0.2"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.2",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.2.23",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "commitizen": "^4.2.4",
    "truffle-hdwallet-provider": "^1.0.6",
    "truffle-plugin-verify": "^0.5.24",
    "ts-node": "^10.3.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4",
    "web3": "^1.7.1",
    "dotenv": "^16.0.0"
  }
}
